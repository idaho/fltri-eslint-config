{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": ".",
    "declaration": false,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "ES2020"
    ],
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "./",
    "sourceMap": false,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": [
    "./lib"
  ],
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}